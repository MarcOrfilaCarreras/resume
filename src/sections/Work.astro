---
import { Work } from "../types/Work";

interface Props {
  title: string;
  works: Work[];
}

const { title, works } = Astro.props;
---

<!-- TODO: Add links to companies -->

<section>
    <a name="work"/>
    <h2 class="text-2xl font-bold text-gray-900 mb-4">{title}</h2>
    <div class="relative border-l border-gray-200 pl-8 ml-2">
        {
            works.map(({ company, position, url, startDate, endDate, highlights }) => (
                <div class="mb-8 relative">
                    <div class="absolute w-4 h-4 bg-blue-500 rounded-full -left-10 top-1"></div>
                    <h3 class="text-lg font-semibold">{position}</h3>
                    <p class="text-gray-600"><strong>{company}</strong> | {startDate} - {endDate}</p>
                    <ul class="list-disc pl-5">
                        {
                            highlights.map((highlight, index) => (
                                <li key={index} class="text-gray-700 mt-2">{highlight}</li>
                            ))
                        }
                    </ul>
                </div>
            ))
        }
    </div>
  </section>
