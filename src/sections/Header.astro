---
import { Profile } from "../types/Profile";
import Icon from "../components/ui/icon.astro";

interface Props {
  name: string;
  profiles: Profile[];
  image: string;
}

const { name, profiles, image } = Astro.props;
---

<header class="text-center">
  <img
    src={image}
    alt="Your Name"
    width="150"
    height="150"
    class="rounded-full mx-auto"
  />
  <h1 class="text-4xl font-bold text-gray-900 mt-4 mb-2">{name}</h1>
  <div class="flex justify-center gap-3">
    {
      profiles.map(({ network, username, url }) => (
        <Icon type={network.toLowerCase()} href={url} text="" />
      ))
    }
  </div>
</header>
