---
import { Education } from "../types/Education";

interface Props {
    title: string;
    education: Education[];
}

const { title, education } = Astro.props;
---

<section>
    <a name="education"></a>
    <h2 class="text-2xl font-bold text-gray-900 mb-4">{title}</h2>
    <div class="relative border-l border-gray-200 pl-8 ml-2">
        {
            education.map(
                ({ institution, url, startDate, endDate, studyType }) => (
                    <div class="mb-8 relative">
                        <div class="absolute w-4 h-4 bg-blue-500 rounded-full -left-10 top-1" />
                        <h3 class="text-lg font-semibold">{studyType}</h3>
                        <span class="text-gray-600 flex gap-2">
                            <a href={url} target="_blank" class="text-gray-600 hover:text-gray-900 flex gap-3"><strong>{institution}</strong></a>
                            <p>|</p>
                            <p>{startDate} - {endDate}</p>
                        </span>
                    </div>
                ),
            )
        }
    </div>
</section>
