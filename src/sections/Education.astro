---
import { Education } from "../types/Work";

interface Props {
  title: string;
  works: Education[];
}

const { title, education } = Astro.props;
---

<!-- TODO: Add links to institutions -->

<section>
    <a name="education"/>
    <h2 class="text-2xl font-bold text-gray-900 mb-4">{title}</h2>
    <div class="relative border-l border-gray-200 pl-8 ml-2">
        {
            education.map(({ institution, url, startDate, endDate, studyType }) => (
                <div class="mb-8 relative">
                    <div class="absolute w-4 h-4 bg-blue-500 rounded-full -left-10 top-1"></div>
                    <h3 class="text-lg font-semibold">{studyType}</h3>
                    <p class="text-gray-600"><strong>{institution}</strong> | {startDate} - {endDate}</p>
                </div>
            ))
        }
    </div>
  </section>
