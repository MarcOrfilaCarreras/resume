---
import Layout from "../layouts/Layout.astro";
import Header from "../sections/Header.astro";
import About from "../sections/About.astro";
import Work from "../sections/Work.astro";
import Education from "../sections/Education.astro";
import Projects from "../sections/Projects.astro";
import Footer from "../sections/Footer.astro";
import Language from "../components/ui/language-button.astro";
import Data from "../translations/en.json";
---

<Layout title={Data.basics.name + " | Portfolio"}>
    <div class="min-h-screen bg-gray-100 p-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto space-y-12">
            <div class="flex flex-col md:flex-row justify-center mt-4 mb-4 border-b border-gray-300 pb-4 items-center">
                <Language />
                <nav class="flex flex-wrap justify-center mt-6 md:mt-0 md:justify-end space-x-4 w-full">
                  <a href="#about" class="text-gray-700 hover:text-blue-500">About me</a>
                  <a href="#work" class="text-gray-700 hover:text-blue-500">Work experience</a>
                  <a href="#education" class="text-gray-700 hover:text-blue-500">Education</a>
                  <a href="#projects" class="text-gray-700 hover:text-blue-500">Projects</a>
                </nav>
            </div>

            <Header name={Data.basics.name} profiles={Data.basics.profiles} image={Data.basics.image} />
            <About title="About me" text={Data.basics.summary} />
            <Work title="Work experience" works={Data.works} />
            <Education title="Education" education={Data.education}/>
            <Projects title="Projects" projects={Data.projects}/>
            <Footer/>
        </div>
    </div>
</Layout>
